@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<script src="@Url.Content("~/static/scripts/Customer.js?v=1.10")"></script>

<h2>Adicionar novo cliente</h2>

<div class="row">
    <form id="form" action="@Url.Action("Post", "Customer")" method="post">
        <div class="row">
            <div class="col-sm-3">
                <label>Customer Name</label>
                <input id="customer" name="CustomerName" required class="form-control" />
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-sm-3">
               <button id="btnSalvar" type="button" class="btn btn-success">Salvar</button>
                <a class="btn btn-info" href="@Url.Action("List","Customer")">Voltar</a>
               <img id="img" style="width: 150px; height: 150px;" src="@Url.Content("~/static/src/loading.gif")"/>
            </div>
        </div>
    </form>
</div>