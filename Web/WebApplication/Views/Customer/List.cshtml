@model List<LogicaProgramacao.Classes.Assembly.CustomerViewModel>

@{
    Layout = "~/Views/Shared/Layout.cshtml";

    ViewBag.Title = "List Customer";
}

<script src="@Url.Content("~/static/scripts/Customer.js?v=1.15")"></script>

<div class="row">
    <div class="col-sm-1">
        <a href="@Url.Action("Add", "Customer")" class="btn btn-primary">Adicionar Novo</a>
    </div>
    <div class="col-sm-1">
        <a href="@Url.Action("Index", "Home")" class="btn btn-info">Voltar</a>
    </div>

</div>

<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Customer name</th>
                <th>Active</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.CustomerName</td>
                        <td>@item.Active.ToString()</td>
                        <td><a href="@Url.Action("Edit", "Customer", new { Id = item.Id})" class="btn btn-primary"></a></td>
                        <td><button onclick="deletarItem(@item.Id)" class="btn btn-danger">X</button></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="modalDelete" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <form action="@Url.Action("Delete", "Customer")" method="post">
                <input type="hidden" id="IdDelete" name="Id"/>
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Atenção!</h4>
                </div>
                <div class="modal-body">
                    <p>Deseja remover o item?</p>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default">Yes</button>
                    <button type="button" class="btn btn-default" onclick="fecharModal()">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

