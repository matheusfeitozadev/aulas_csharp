@model List<LogicaProgramacao.Classes.Assembly.CustomerViewModel>

@{
    Layout = "~/Views/Shared/Layout.cshtml";

    ViewBag.Title = "List Customer";
}

<div class="row">
    <div class="col-sm-1">
        <a href="@Url.Action("Add", "Customer")" class="btn btn-primary">Adicionar Novo</a>
    </div>
    <div class="col-sm-1">
        <a href="@Url.Action("Index", "Home")" class="btn btn-info">Voltar</a>
    </div>

</div>

<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Customer name</th>
                <th>Active</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.CustomerName</td>
                        <td>@item.Active.ToString()</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>



